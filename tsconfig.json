{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "target": "es2018",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "paths": {
      "@theguild/components": ["packages/components/src/index.ts"],
      "@theguild/monaco-graphql-editor": ["packages/monaco-graphql-editor/src/index.ts"]
    }
  },
  "include": ["packages"],
  "exclude": ["packages/**/*.stories.tsx", "node_modules"]
}
