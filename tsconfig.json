{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./packages",
    "baseUrl": ".",
    "declaration": true,
    "jsx": "react-jsx",
    "target": "es2019",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "paths": {
      "@theguild/components": ["packages/components/src/index.ts"],
      "@theguild/editor": ["packages/editor/src/index.ts"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noUnusedLocals": true,
    "types": ["vitest/globals"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["packages/**/*.stories.tsx", "website", "scripts"]
}
