{
  "name": "the-guild-components-monorepo",
  "private": true,
  "scripts": {
    "start": "start-storybook -p 6008",
    "build": "rimraf dist && tsc && rollup -c && yarn build:css && yarn copy-fonts",
    "build:css": "NODE_ENV=production tailwindcss --config tailwind.config.cjs --postcss --output packages/components/dist/index.css",
    "copy-fonts": "cp packages/components/src/static/fonts.css packages/components/dist/fonts.css",
    "storybook": "build-storybook -o dist-storybook",
    "next:dev": "concurrently -r \"tsc --watch\" \"rollup -c --watch\" \"yarn --cwd examples/nextjs dev\" \"yarn build:css\" \"yarn copy-fonts\"",
    "next:build": "cd examples/nextjs && yarn build && yarn start",
    "prettier": "prettier --ignore-path .gitignore --write --list-different .",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "lint": "eslint --ignore-path .gitignore .",
    "type-check": "tsc",
    "type-check:watch": "tsc --watch",
    "prepare": "husky install",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "release:canary": "(node scripts/canary-release.js && yarn build && yarn changeset publish --tag alpha) || echo Skipping Canary...",
    "zip": "yarn build && yarn --cwd packages/components pack"
  },
  "devDependencies": {
    "@babel/core": "7.17.8",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@changesets/cli": "2.24.0",
    "@emotion/babel-plugin-jsx-pragmatic": "0.1.5",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-image": "2.1.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@storybook/addon-actions": "6.4.22",
    "@storybook/addon-essentials": "6.4.22",
    "@storybook/addon-links": "6.4.22",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "6.4.22",
    "@tailwindcss/line-clamp": "0.3.1",
    "@theguild/prettier-config": "0.0.1",
    "@types/react": "17.0.43",
    "@types/react-instantsearch-core": "6.10.8",
    "@types/react-instantsearch-dom": "6.12.3",
    "@types/react-paginate": "7.1.1",
    "@types/validator": "13.7.3",
    "@typescript-eslint/eslint-plugin": "5.30.0",
    "@typescript-eslint/parser": "5.30.0",
    "concurrently": "7.2.2",
    "eslint": "8.18.0",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.5.13",
    "eslint-plugin-tailwindcss": "3.6.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "postcss": "8.4.14",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.11",
    "pretty-quick": "3.1.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup": "2.70.1",
    "rollup-plugin-auto-external": "2.0.0",
    "rollup-plugin-bundle-size": "1.0.3",
    "rollup-plugin-copy": "3.4.0",
    "storybook-dark-mode": "1.0.9",
    "tailwindcss": "3.1.4",
    "tsconfig-paths-webpack-plugin": "3.5.2",
    "typescript": "4.7.4"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "browserslist": [
    "> 1%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,tsx,md,mdx,json,yml,yaml}": [
      "pretty-quick --staged",
      "eslint"
    ],
    "yarn.lock": [
      "npx yarn-deduplicate"
    ]
  },
  "engines": {
    "node": ">=14"
  }
}
